<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KCPatient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <img alt="Brand" src="~/images/doctor.jpg" style="width:150px;height:100px" />
                    </a>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Conestoga Clinic</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCCountry" asp-action="Index">Countries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCConcentrationUnit" asp-action="Index">Concentrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCDiagnosisCategory" asp-action="Index">Diagnosis Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCDispensingUnit" asp-action="Index">Dispensing Units</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCMedicationType" asp-action="Index">Med Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCPatientDiagnosis" asp-action="Index">Patient Diagnosis</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KCPatient" asp-action="Index">Patient Details</a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle nav-link text-dark" data-toggle="dropdown" href="#">
                                Security <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="text-dark" asp-controller="" asp-action="">User Maintenance</a>
                                </li>
                                <li>
                                    <a class="text-dark" asp-controller="KCRole" asp-action="Index">Role Maintenance</a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if ((string)TempData["message"] != "")
            {
                <div class="validationMed">
                    <span>@TempData["message"]</span>
                </div>

            }

            @if ((string)TempData["successMessage"] != "")
            {
                <div class="successCss">
                    <span>@TempData["successMessage"]</span>
                </div>

            }


            
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="col-md-6" style="float:left">
                &copy; 2022 - KCPatients - <a asp-area="" asp-controller="Home" asp-action="mailto:kpotharaju8582@conestogac.on.ca?subject = Feedback&body = Message"> Krishna Chaitanya Potharaju</a>
            </div>
            <div class="col-md-6" style="float:right; text-align:right">
                <a asp-area="" asp-controller="Home" asp-action="">Home</a> <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
</body>
</html>
