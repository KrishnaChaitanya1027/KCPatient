@model IEnumerable<KCPatient.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["Message"] != null)
{
    <div class="successCss">
        <span>@TempData["Message"]</span>
    </div>

}




<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Patient Name")
            </th>
            <th>
                @Html.DisplayName("Street Address")
            </th>
            <th>
                @Html.DisplayName("Date of Birth")
            </th>
            <th>
                @Html.DisplayName("Date of Death")
            </th>
            <th>
                @Html.DisplayName("Home Phone")
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var fullName = item.LastName + ", " + item.FirstName;
                        @Html.DisplayFor(m => fullName)
                    }


                    @*@Html.DisplayFor(modelItem => item.FirstName)*@
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @if (item.DateOfBirth != null)
                    {
                        @Convert.ToDateTime(item.DateOfBirth).ToString("dd MMM yyyy")
                    }
                    @* @Html.DisplayFor(modelItem => item.DateOfBirth)*@
                </td>
                <td>
                    @if (item.DateOfDeath != null)
                    {
                        @Convert.ToDateTime(item.DateOfDeath).ToString("dd MMM yyyy")
                    }


                    @*@Html.DisplayFor(modelItem => item.City)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomePhone)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.PatientId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PatientId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PatientId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
