@model KCPatient.Models.PatientTreatment
@using Microsoft.AspNetCore.Http
@{
    
        ViewData["Title"] = "Details of Treatment for" + Context.Session.GetString("diagnosis") + ", Patient:" + Context.Session.GetString("patientName");
    }

    <h1>Details of Treatment for @Context.Session.GetString("diagnosis"), Patient: @Context.Session.GetString("patientName")</h1>

    <div>
        <h4>PatientTreatment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DatePrescribed)
            </dt>
            <dd class="col-sm-10">
                @Convert.ToDateTime(Model.DatePrescribed).ToString("dd MMM yyyy HH:mm")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Treatment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Treatment.Name)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.PatientTreatmentId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
