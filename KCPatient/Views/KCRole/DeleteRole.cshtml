@using Microsoft.AspNetCore.Identity;
@model List<IdentityUser>
@{ ViewData["Title"] = $"Confirm Delete of Role '{ViewBag.roleName}'";
                var roleID = ViewBag.roleID; }

<h1>@ViewData["Title"]</h1>
<h2>User In Role</h2>
<form method="post">
    <ul>
        @foreach (var user in Model)
        {
<li>@user.UserName</li>}
    </ul>
    <div>
        <button class="btn" asp-action="Delete" asp-controller="KCRole" asp-route-id="@roleID">
            Delete Confirmed
        </button>
        <a class="btn" asp-action="Index" asp-controller="KCRole">Cancel Delete</a>
    </div>
</form>

